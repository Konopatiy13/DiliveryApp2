<Window x:Class="DiliveryApp2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiliveryApp2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DataGrid>
            <TextBox
                Width="100" Height="100" Text="дизайн будет сделан на выходных">
            </TextBox>
        </DataGrid>
        <DataGrid
            IsReadOnly="True"
            SelectedItem="{Binding SelectedStudent}"
            Grid.Row="1"
            AutoGenerateColumns="False"
            ItemsSource="{Binding Students}">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="ФИО"
                    Binding="{Binding Path=Name}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Курс"
                    Binding="{Binding Path=Course}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Курс"
                    Binding="{Binding Path=Course}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Курс"
                    Binding="{Binding Path=Course}">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Content="Получить данные"
                Name="getButton"
                Click="getButton_Click">

            </Button>
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Content="Удалить"
                Name="deleteButton"
                Click="deleteButton_Click">

            </Button>
            <Button
                Name="addButton"
                Content="Добавить"
                Grid.Column="2"
                Click="addButton_Click">

            </Button>

        </Grid>





    </Grid>
</Window>
