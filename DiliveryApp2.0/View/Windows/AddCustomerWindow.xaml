<Window x:Class="DiliveryApp2._0.View.Windows.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiliveryApp2._0.View.Windows" xmlns:viewmodel="clr-namespace:DiliveryApp2._0.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="AddCustomerWindow" Height="400" Width="300" MinHeight="200" MinWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Label Content="Введите ФИО покупателя"/>
            <TextBox Text="{Binding NewCustomer.customer_name}" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <Label Content="Введите адрес покупателя"/>
            <TextBox Text="{Binding NewCustomer.customer_address}" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <Label Content="Введите номер телефона покупателя"/>
            <TextBox Text="{Binding NewCustomer.customer_phone}" Margin="0,5,0,0"/>
        </StackPanel>

        <Button 
        Name="saveButton"
        Content="Сохранить"
        Grid.Row="3"
        Click="saveButton_Click"
        Margin="10"/>
    </Grid>

</Window>
